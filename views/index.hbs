<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logged In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <style>
        a {
            all: unset;
        }

        .navbar .btn {
            padding: 8px 12px; 
            margin-right: 8px;
        }
        body{
            background-color: cyan;
        }
        h6{
            margin-top: 50px;
            display: flex;
            justify-content: center;
            color: white;
            font-size: 120px;
            font-family: 'Times New Roman', Times, serif;
        }
    </style>
</head>
<body>
  
<nav class="navbar bg-body-tertiary">
    <div class="container-fluid justify-content-start">
        <button type="button" class="btn btn-outline-info"><a href="/">Home </a></button>
        <button type="button" class="btn btn-outline-info"><a href="/users/course">Course </a></button>
        <button type="button" class="btn btn-outline-info"><a  onclick="email()">Register Course </a></button>
        <div class="ms-auto">
        <button type="button" class="btn btn-danger"><a href="/">Logout </a></button>
        </div>
    </div>
</nav>  

<h6>Welcome Back</h6>

<script>
   
    const loginStatus = "{{loginStatus}}"; 

    if (loginStatus) {
        window.localStorage.clear();
        window.localStorage.setItem('emailsss', loginStatus);
       
    }

    function email(){
        var email = window.localStorage.getItem('emailsss');
         if (email != null) {
            window.location.href = `/users/registered?email=${encodeURIComponent(email)}`;
        } else {
            alert('No email found in local storage');
        }
    };
         

             fetch('/users/registered',{
            method: 'POST',
            headers: {
            'Content-Type': 'application/json'
            },
            body: JSON.stringify(email)
         })

        .then(response => response.json())
        .then(data => {
        console.log('Success:', data);

    })
         .catch(error => {
        console.error('Error:', error);
    }); 
    
        
</script>

</body>
</html>
